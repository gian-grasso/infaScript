#!/bin/bash
help() {
  echo "Usage: infa <arguments>
  -d Download InfaScript.sh
  -s Starts InfaScript.sh
  -u Update InfaScript.sh
  -h Help"
  exit 1
}
# Verifica se sono stati forniti argomenti
if [ $# -eq 0 ]; then
  help
elif [ "$1" == "-d" ]; then
apt update -y ; echo -e "\n" ; apt install wget git tsu -y ; echo -e "\n"; rm -rf $HOME/infaScript > /dev/null 2>&1 ; wget https://raw.githubusercontent.com/Infamousmick/infaScript/Personal/setup.sh > /dev/null 2>&1 ; bash setup.sh
elif [ "$1" == "-s" ]; then
file_path="$1"
 # Apri il file con l'app predefinita
cd $HOME/infaScript ; bash run.sh
elif [ "$1" == "-u" ]; then
rm $HOME/setup.sh ; wget https://raw.githubusercontent.com/Infamousmick/infaScript/Personal/setup.sh > /dev/null 2>&1 ; bash setup.sh
elif [ "$1" == "-h" ]
help
else
help
fi

# Costruisci il percorso completo del file 